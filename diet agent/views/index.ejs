<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nutritionist Intake Form</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                }
            }
        }
    </script>
</head>

<body class="flex items-center justify-center min-h-screen p-4 bg-neutral-50 font-sans">
    <div class="max-w-2xl w-full">
        <!-- Main Card -->
        <div class="bg-white border border-neutral-200 shadow-sm rounded-xl p-8">
            <div class="mb-8">
                <h1 class="text-2xl font-bold text-neutral-900 mb-2">Personal Information</h1>
                <p class="text-neutral-500 text-sm">Please provide your details to help us create your personalized diet
                    plan.</p>
            </div>

            <form action="/submit" method="POST" class="space-y-6">
                <!-- Name & Email -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="name" class="block text-sm font-medium text-neutral-700 mb-1.5">Full Name</label>
                        <input type="text" id="name" name="name" required placeholder="John Doe"
                            class="w-full px-3.5 py-2 border border-neutral-300 rounded-md outline-none transition-all duration-200 focus:border-neutral-700 focus:ring-2 focus:ring-neutral-200 placeholder:text-neutral-400">
                    </div>
                    <div>
                        <label for="email" class="block text-sm font-medium text-neutral-700 mb-1.5">Email
                            Address</label>
                        <input type="email" id="email" name="email" required placeholder="john@example.com"
                            class="w-full px-3.5 py-2 border border-neutral-300 rounded-md outline-none transition-all duration-200 focus:border-neutral-700 focus:ring-2 focus:ring-neutral-200 placeholder:text-neutral-400">
                    </div>
                </div>

                <!-- Age, Height, Gender -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label for="age" class="block text-sm font-medium text-neutral-700 mb-1.5">Age</label>
                        <input type="number" id="age" name="age" required placeholder="25"
                            class="w-full px-3.5 py-2 border border-neutral-300 rounded-md outline-none transition-all duration-200 focus:border-neutral-700 focus:ring-2 focus:ring-neutral-200 placeholder:text-neutral-400">
                    </div>
                    <div>
                        <label for="height" class="block text-sm font-medium text-neutral-700 mb-1.5">Height
                            (feet)</label>
                        <input type="number" step="0.1" id="height" name="height" required placeholder="5.9"
                            class="w-full px-3.5 py-2 border border-neutral-300 rounded-md outline-none transition-all duration-200 focus:border-neutral-700 focus:ring-2 focus:ring-neutral-200 placeholder:text-neutral-400">
                    </div>
                    <div>
                        <label for="gender" class="block text-sm font-medium text-neutral-700 mb-1.5">Gender</label>
                        <select id="gender" name="gender" required
                            class="w-full px-3.5 py-2 border border-neutral-300 rounded-md outline-none transition-all duration-200 focus:border-neutral-700 focus:ring-2 focus:ring-neutral-200 bg-white">
                            <option value="">Select</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                </div>

                <!-- Weight & Goal -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="weight" class="block text-sm font-medium text-neutral-700 mb-1.5">Current Weight
                            (kg)</label>
                        <input type="number" step="0.1" id="weight" name="weight" required placeholder="70"
                            class="w-full px-3.5 py-2 border border-neutral-300 rounded-md outline-none transition-all duration-200 focus:border-neutral-700 focus:ring-2 focus:ring-neutral-200 placeholder:text-neutral-400">
                    </div>
                    <div>
                        <label for="goal" class="block text-sm font-medium text-neutral-700 mb-1.5">Goal</label>
                        <select id="goal" name="goal" required
                            class="w-full px-3.5 py-2 border border-neutral-300 rounded-md outline-none transition-all duration-200 focus:border-neutral-700 focus:ring-2 focus:ring-neutral-200 bg-white">
                            <option value="">Select Goal</option>
                            <option value="weight gain">Weight Gain</option>
                            <option value="weight loss">Weight Loss</option>
                            <option value="maintenance">Maintenance</option>
                        </select>
                    </div>
                </div>

                <!-- Weight Goal & Diet Preference -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="weight_goal" class="block text-sm font-medium text-neutral-700 mb-1.5">Target Weight
                            (kg)</label>
                        <input type="number" step="0.1" id="weight_goal" name="weight_goal" required placeholder="65"
                            class="w-full px-3.5 py-2 border border-neutral-300 rounded-md outline-none transition-all duration-200 focus:border-neutral-700 focus:ring-2 focus:ring-neutral-200 placeholder:text-neutral-400">
                    </div>
                    <div>
                        <label for="diet_pref" class="block text-sm font-medium text-neutral-700 mb-1.5">Diet
                            Preference</label>
                        <select id="diet_pref" name="diet_pref" required
                            class="w-full px-3.5 py-2 border border-neutral-300 rounded-md outline-none transition-all duration-200 focus:border-neutral-700 focus:ring-2 focus:ring-neutral-200 bg-white">
                            <option value="">Select Preference</option>
                            <option value="veg">Vegetarian</option>
                            <option value="non veg">Non-Vegetarian</option>
                            <option value="vegan">Vegan</option>
                        </select>
                    </div>
                </div>

                <!-- Allergies -->
                <div>
                    <label for="allergies" class="block text-sm font-medium text-neutral-700 mb-1.5">Allergies (if
                        any)</label>
                    <textarea id="allergies" name="allergies" rows="3" placeholder="e.g. Peanuts, Gluten"
                        class="w-full px-3.5 py-2 border border-neutral-300 rounded-md outline-none transition-all duration-200 focus:border-neutral-700 focus:ring-2 focus:ring-neutral-200 placeholder:text-neutral-400"></textarea>
                </div>

                <div class="pt-4">
                    <button type="submit"
                        class="w-full bg-black text-white px-6 py-3 rounded-md font-medium transition-colors duration-200 hover:bg-neutral-900 active:scale-[0.98]">
                        Generate Diet Plan
                    </button>
                </div>
            </form>
        </div>
        <p class="text-center text-neutral-400 text-xs mt-6">Powered by Diet Agent & Notion</p>
    </div>
</body>

</html>